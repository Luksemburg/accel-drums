<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/crash"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/crash"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/imageButton12"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="crash" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/work"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:onClick="work" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/hat"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:onClick="hat" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/bass"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:onClick="bass" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/tri"
        android:id="@+id/imageButton5"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:layout_toEndOf="@+id/imageButton4"
        android:onClick="tri" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/tom"
        android:id="@+id/imageButton6"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5"
        android:onClick="tom" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/mpause"
        android:layout_alignBottom="@+id/imageButton6"
        android:layout_toRightOf="@+id/imageButton6"
        android:layout_toEndOf="@+id/imageButton6"
        android:id="@+id/imageButton7"
        android:onClick="mpause" />

    <SeekBar
        android:clickable="false"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="8"
        android:progress="3"
        android:layout_below="@+id/imageButton11"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="37dp"
        android:id="@+id/seekBarDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginBottom="25dp"
        android:id="@+id/seekBarBPM"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:max="250"
        android:progress="110" />

    <TextView
        android:text="DURATION:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageButton11"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <TextView
        android:text="1/4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2" />

    <TextView
        android:text="TEMP (bpm):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBarBPM"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView7" />

    <TextView
        android:text="120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView8" />

    <TextView
        android:text="Instruments: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_alignLeft="@+id/seekBarDuration"
        android:layout_alignStart="@+id/seekBarDuration"
        android:id="@+id/textView9" />

    <TextView
        android:text="   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView10"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:id="@+id/textView11" />

    <TextView
        android:text="Durations: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:text="   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <ImageButton
        android:scaleType="fitXY"
        app:srcCompat="@drawable/play"
        android:id="@+id/imageButton11"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_height="72dp"
        android:layout_width="72dp"

        android:layout_alignTop="@+id/imageButton10"
        android:layout_toLeftOf="@+id/imageButton10"
        android:layout_toStartOf="@+id/imageButton10"
        android:onClick="play"
        android:checked="false" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/add"
        android:id="@+id/imageButton8"
        android:onClick="add"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_toLeftOf="@+id/imageButton11"
        android:layout_toStartOf="@+id/imageButton11" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/pause"
        android:layout_marginTop="20dp"
        android:id="@+id/imageButton9"
        android:elevation="0dp"
        android:cropToPadding="false"
        android:onClick="pause"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:scaleType="fitXY"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/stop"
        android:id="@+id/imageButton10"
        android:onClick="stop"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_toLeftOf="@+id/imageButton9"
        android:layout_toStartOf="@+id/imageButton9" />

</RelativeLayout>